@model Quotation

@{
    ViewBag.Title = "Price Quotation";
}

<form asp-action="Index" method="post">
    <main class="container">
        <div class="form-group row">
            <div class="control-label mr-1 col-sm-2"><label asp-for="Subtotal">
                Subtotal:
            </label></div>
            <div class="col-sm-4"><input asp-for="Subtotal" /></div>
            <div class="col-md-5 col-sm-6">
                <span asp-validation-for="Subtotal" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="control-label mr-1 col-sm-2"><label asp-for="DiscountPercent">
                Discount Percent:
            </label></div>
            <div class="col-sm-4"><input asp-for="DiscountPercent" /></div>
            <div class="col-md-5 col-sm-6">
                <span asp-validation-for="DiscountPercent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="control-label mr-1 col-sm-2"><label>Discount Amount:</label></div>
            <div class="col-sm-6"><label>@ViewBag.FV1.ToString("c2")</label></div>
        </div>
        <div class="form-group row">
            <div class="control-label mr-1 col-sm-2"><label>Total:</label></div>
            <div class="col-sm-6"><label>@ViewBag.FV2.ToString("c2")</label></div>
        </div>
        <button type="submit" class="btn btn-success">Calculate</button>
        <a asp-action="Index" class="btn btn-success">Clear</a>
    </main>
</form>
 